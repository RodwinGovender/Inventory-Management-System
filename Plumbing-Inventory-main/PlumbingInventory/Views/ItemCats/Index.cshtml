@model IEnumerable<PlumbingInventory.Models.ItemCat>

@{
    ViewBag.Title = "Index";
}

<h2>Item Category List</h2>

<p>
    <a href='@Url.Action("Create", "ItemCats", null)' class="btn btn-primary">New Category</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ItemCat_Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ItemCat_Name)
        </td>
        <td>
            <a href='@Url.Action("Edit", "ItemCats", new { id = item.ItemCat_ID }, null)' class="btn btn-primary">Edit Name</a>
   
        </td>
    </tr>
}

</table>
